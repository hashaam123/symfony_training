*{
    box-sizing: border-box;
}

.top-container {
    width: 300px;
    height: auto;
    border-radius: 25px;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    border: 2px solid gray;
    overflow: hidden;
}

.container-header {
    text-align: center;
    background-color: #f95252;
    padding:10px;
    margin:0;
}

.top-container section *{
    margin: 10px;
}