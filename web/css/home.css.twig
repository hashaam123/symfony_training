*{
    box-sizing: border-box;
}

.menu{
    list-style-type: none;
    background-color: #576D37;
    color: white;
    padding:10px;
    padding-top: 0px;
    margin: 0px;
}

.menu li{
    display: inline-block;
    background-color: #2B2B2B;
    width: 150px;
    height: 35px;
    text-align: center;
    margin-left: 20px;
    margin-top:10px;
}

.menu .contents{
    background-color: #576D37;
    padding-left: 20px;
    position:absolute;
}

.menu a{
    color:white;
    text-decoration: none;
    display: block;
    width: 150px;
    height: 35px;
    padding-top: 5px;
}

.menu .contents li{
    display: block;
}

.menu .contents{
    display: none;
}

.menu li:hover .contents{
    display: block;
}

.menu li:hover{
    background-color: #33372D;
}

a:visited{
    background-color: #C26B32;
}